        <shape>
            <solid android:color="#D32F2F"/> <!-- Darker red for pressed state -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#F44336"/> <!-- Accent red color -->
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>
