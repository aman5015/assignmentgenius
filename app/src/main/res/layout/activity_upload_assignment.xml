<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Assignment"
            android:textSize="24sp"
            android:textColor="#333333"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingBottom="16dp" />

        <!-- Assignment Title Input -->
        <TextView
            android:id="@+id/tvAssignmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Title"
            android:textSize="18sp"
            android:textColor="#555555"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etAssignmentTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter assignment title"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:layout_marginBottom="16dp" />

        <!-- Assignment Description Input -->
        <TextView
            android:id="@+id/tvAssignmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Assignment Description"
            android:textSize="18sp"
            android:textColor="#555555"
            android:paddingBottom="4dp" />

        <EditText
            android:id="@+id/etAssignmentDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter assignment description"
            android:background="@drawable/rounded_edittext"
            android:padding="12dp"
            android:minLines="4"
            android:gravity="top"
            android:layout_marginBottom="16dp" />

        <!-- Upload Assignment Button -->
        <Button
            android:id="@+id/btnUploadAssignment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Assignment"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp" />

        <!-- Assignment Preview -->
        <TextView
            android:id="@+id/tvAssignmentPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No assignment uploaded"
            android:textColor="#888888"
            android:paddingTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Upload Solution Button -->
        <Button
            android:id="@+id/btnUploadSolution"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Solution"
            android:background="@drawable/rounded_button"
            android:textColor="#ffffff"
            android:layout_marginTop="16dp" />

        <!-- Solution Preview -->
        <TextView
            android:id="@+id/tvSolutionPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No solution uploaded"
            android:textColor="#888888"
            android:paddingTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Submit and Cancel Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Submit"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff"
                android:layout_marginRight="8dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@drawable/rounded_button"
                android:textColor="#ffffff"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <!-- View Previous Assignments Button -->
        <Button
            android:id="@+id/btnViewPrevious"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Previous Assignments"
            android:background="@drawable/rounded_button_accent"
            android:textColor="#ffffff"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
