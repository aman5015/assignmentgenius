<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menupage"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Assignment Genius"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#6A1AF8"
        android:textAlignment="center"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Upload Assignment Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUploadAssignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Upload Assignment"
        app:icon="@drawable/ic_upload"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:cornerRadius="16dp"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Manage Assignments Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageAssignment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Manage Assignments"
        app:icon="@drawable/ic_manage"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:cornerRadius="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnUploadAssignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Chatbox Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChatbox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Chatbox"
        app:icon="@drawable/ic_chatbox"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        app:cornerRadius="16dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnManageAssignment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Assignment Doer Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAssignmentDoer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Assignment Doer"
        app:icon="@drawable/ic_assignment_doer"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="15dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnChatbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Settings Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Settings"
        app:icon="@drawable/ic_settings"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="15dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnAssignmentDoer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- About Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAbout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="About"
        app:icon="@drawable/ic_about"
        app:iconPadding="8dp"
        app:iconTint="@color/white"
        android:backgroundTint="#6200EE"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="15dp"
        app:cornerRadius="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>
