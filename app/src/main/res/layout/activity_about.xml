<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/loginpage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- App Logo or Icon -->
    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_app_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_logo_description"/>

    <!-- App Name -->
    <TextView
        android:id="@+id/textViewAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="28sp"
        android:textColor="@color/edittext_border"
        android:textStyle="bold"
        android:layout_below="@id/imageViewLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- App Version -->
    <TextView
        android:id="@+id/textViewVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textSize="16sp"
        android:textColor="@color/edittext_border"
        android:layout_below="@id/textViewAppName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>

    <!-- App Description -->
    <TextView
        android:id="@+id/textViewDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_description"
        android:textSize="16sp"
        android:textColor="@color/edittext_border"
        android:layout_below="@id/textViewVersion"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:gravity="center"/>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/textViewDescription"
        android:layout_marginTop="24dp"
        android:background="@color/black"/>

    <!-- Phone Call Section -->
    <RelativeLayout
        android:id="@+id/phoneSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider"
        android:layout_marginTop="24dp">

        <ImageView
            android:id="@+id/imageViewPhoneIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_phone_call"
            android:contentDescription="@string/phone_number"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textViewPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_number"
            android:textSize="16sp"
            android:textColor="@color/edittext_border"
            android:layout_toEndOf="@id/imageViewPhoneIcon"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <!-- Email Section -->
    <RelativeLayout
        android:id="@+id/emailSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/phoneSection"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/imageViewEmailIcon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_email"
            android:contentDescription="@string/email_address"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textViewEmailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_address"
            android:textSize="16sp"
            android:textColor="@color/edittext_border"
            android:layout_toEndOf="@id/imageViewEmailIcon"
            android:layout_marginStart="8dp"
            android:gravity="center_vertical"/>

    </RelativeLayout>

    <!-- Social Media Links -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/emailSection"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp">

        <ImageView
            android:id="@+id/imageViewFacebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_facebook"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/facebook_logo_description"/>

        <ImageView
            android:id="@+id/imageViewTwitter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_twitter"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/twitter_logo_description"/>

        <ImageView
            android:id="@+id/imageViewInstagram"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_instagram"
            android:contentDescription="@string/instagram_logo_description"/>

    </LinearLayout>

</RelativeLayout>
